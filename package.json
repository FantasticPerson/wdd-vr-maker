{
    "name": "wdd-vr-maker",
    "version": "0.1.0",
    "private": true,
    "main": "main.js",
    "scripts": {
        "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
        "start:react": "cross-env BROWSER=none react-app-rewired start",
        "start:electron": "wait-on http://localhost:3000 && electron .",
        "build": "npm run build:copy && npm run pack",
        "build:react": "react-app-rewired build",
        "build:react-copy": "npm run build:react && npm run copy:electron",
        "build:copy": "npm run build:react && npm run copy:electron",
        "pack": "electron-builder",
        "copy:electron": "cp -r ./app/. ./build",
        "build:win": "npm run build:react-copy && npm run pack:win",
        "pack:win": "electron-builder --win",
        "test": "react-app-rewired test --env=jsdom"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "productName": "Electron-React-Test",
        "extends": null,
        "files": [
            "build/**/*"
        ],
        "mac": {
            "--icon": "icons/icon.icns"
        },
        "win": {
            "target": "nsis",
            "--icon": "icons/icon.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "--icon": "icons/icon.png"
        },
        "extraMetadata": {
            "main": "build/index.js"
        },
        "directories": {
            "buildResources": "assets"
        }
    },
    "dependencies": {
        "@material-ui/core": "^4.5.0",
        "@material-ui/icons": "^4.4.3",
        "@material-ui/lab": "^4.0.0-alpha.28",
        "connected-react-router": "^6.5.2",
        "dexie": "^2.0.4",
        "electron": "^15.5.5",
        "electron-is-dev": "^1.1.0",
        "font-awesome": "^4.7.0",
        "fs-extra": "^8.1.0",
        "get-pixels": "^3.3.2",
        "gm": "^1.23.1",
        "graceful-fs": "4.1.11",
        "hashids": "^2.0.1",
        "moment": "^2.24.0",
        "react": "^16.10.2",
        "react-audio-player": "^0.11.1",
        "react-dom": "^16.10.2",
        "react-redux": "^7.1.1",
        "react-router-dom": "^5.1.2",
        "react-router-redux": "^4.0.8",
        "react-scripts": "3.2.0",
        "readline": "^1.3.0",
        "redux": "^4.0.4",
        "redux-act": "^1.7.7",
        "redux-logger": "^3.0.6",
        "redux-thunk": "^2.3.0",
        "reselect": "^4.0.0",
        "swig": "^1.4.2",
        "xmlbuilder": "^13.0.2"
    },
    "devDependencies": {
        "concurrently": "^5.0.0",
        "cross-env": "^6.0.3",
        "devtron": "^1.4.0",
        "electron-builder": "^21.2.0",
        "electron-debug": "^3.0.1",
        "electron-devtools-installer": "^2.2.4",
        "electron-rebuild": "^1.8.6",
        "react-app-rewired": "^2.1.3",
        "react-hot-loader": "^4.12.15",
        "wait-on": "^3.3.0"
    }
}
